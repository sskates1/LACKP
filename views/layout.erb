<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet"  href="/home.css">
  </head>
  <body>
    <nav>
      <ul class ="super-bar">
        <!-- first row of nav bar -->
        <li>
          <ul class = "navigation-bar1">
            <li><a href="/">Home</a></li>
            <% @teams_list.each do |team_name| %>
              <li><a href="/teams/<%= team_name%>"><%= team_name%></a></li>
            <% end %>
          </ul>
        </li>
        <!-- end first row of nav bar -->

        <!-- second row of nav bar -->
        <li>
          <ul class = "navigation-bar1">
            <% @position_list.each do |position| %>
              <li><a href="/position/<%= position%>"><%= position%></a></li>
            <% end %>
          </ul>
        </li>
        <!-- end second row of nav bar -->

      </ul>
    </nav>

    <%= yield %>

    <footer>Copyright <%= Time.now %></footer>
  </body>
</html>
